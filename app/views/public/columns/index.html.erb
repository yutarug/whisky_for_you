<<%= stylesheet_link_tag 'public/bottles/bottles', :media => "all" %>
<%= stylesheet_link_tag 'public/bottles/bottles-reset', :media => "all" %>
<div class="contents-bottles">
	<section class="bottles_list">

	    <div class="inner">

	      <div class="ttls">
	        <p>検索結果</p>
	      </div> <!--ttl-->

	      <div class="heading">
	        <p> <span><%= @columns.size%></span> 件ヒットしました！</p>
	      </div> <!--heading-->


        <div class="wrap">
          <% @columns.each do |column| %>
            <div class="box">
              <figure>
              <%= attachment_image_tag column, :image%>
              </figure>
              <div class="txt">
                <p><%= link_to column.title, column_path(column.id)%></p>
              </div> <!--txt-->
            </div> <!--box-->
          <% end %>
        </div> <!--wrap-->


	    </div> <!--inner-->

	</section>
</div>